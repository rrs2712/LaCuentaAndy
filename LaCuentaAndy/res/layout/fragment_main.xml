<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--     MONTO CTA -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >  
        <TextView
            android:id="@+id/monto_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/monto_tv" />
        <EditText
	        android:id="@+id/monto_ed"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"
	        android:hint="@string/monto_ed_hint" >	
    	</EditText>     
    </LinearLayout>
    
<!--     CANTIDAD PERSONAS -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
	        android:id="@+id/people_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/people_tv" />
		<Spinner
	        android:id="@+id/people_spn"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />
    </LinearLayout>
    
    
    
    
<!--     PROPINA -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
			    <TextView
		        android:layout_weight="1"
	        	android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:text="@string/signo_porcentual" />
			    <TextView
	            android:id="@+id/propina_tv"
		        android:layout_weight="1"
	        	android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:text="@string/propina_tv" />
			    <TextView
		        android:layout_weight="1"
	        	android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:text="@string/signo_moneda" />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
			<Spinner
		        android:id="@+id/propina_spn"
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content" />
	        <EditText
		        android:id="@+id/propina_ed"
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:inputType="numberDecimal"
		        android:hint="@string/propina_ed_hint" />    
		</LinearLayout>       
        
    </LinearLayout>
    

<!--     REDONDEO -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/redondeo_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/redondear_tv" />
   		<ToggleButton
   		    android:id="@+id/redondeo_tgg"
   		    android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content" />        
    </LinearLayout>
    
    
<!--     RESULTADO -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/resultado_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp" />       
    </LinearLayout>    
    


</LinearLayout>